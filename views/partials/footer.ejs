<script>

  window.onload = ()=>{
    axios.get("/empresa").then(resp => {
      var empresa = resp.data[0]
      document.getElementById('empresaFooter').innerHtlm = empresa.nome
      document.getElementById("descricaoFooter").innerHTML =  empresa.descricao
      var endereco = `${empresa.cep}, ${empresa.rua}, Nº${empresa.numero} ${empresa.bairro}, ${empresa.cidade} - ${empresa.estado}`
      document.getElementById("enderecoFooter").innerHTML = endereco
      document.getElementById("emailFooter").innerHTML = empresa.email
      document.getElementById("telefoneFooter").innerHTML = empresa.telefone
      document.getElementById("celularFooter").innerHTML = empresa.celular
    })
    axios.get("/categorias").then(resp =>{
      var categorias = resp.data.categorias
      categorias.forEach((categoria,index)=>{
        if (index < 3) {
          var cat =  document.getElementById(`categoriaFooter${index}`)
          cat.innerHTML = categoria.titulo
          cat.href = `/categoria/${categoria.id}`
        }
      })
    })
  }
  
</script>
