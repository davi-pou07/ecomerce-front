    <script>
        //VERIFICA USUARIO LOGADO E COLOCA INFORMAÇÕES NA DIV
        var reglog = document.getElementById("reglog")

        reglog.innerHTML = ['<div class="spinner-border text-primary" role="status"><span class="visually-hidden"></span></div>'].join('');

        axios.get('https://ecomerce-front.herokuapp.com/usuario/logado').then(resp => {
            var dados = resp.data
            if (dados.clienteId != undefined) {
                //Remover botãoes de login
                reglog.parentNode.removeChild(reglog);
                //Colocar nome do cliente
                var userNome = document.getElementById("userNome").innerHTML = dados.clienteNome.split(" ")[0]
                //Coloca foto do cliente
                if (dados.clienteFoto != undefined) {
                    var imgCli = document.getElementById("imgCli")
                    imgCli.src = dados.clienteFoto
                }
                var spanCarrin = document.getElementById("spanCarrin").innerHTML = dados.carrinho.quantidade

                var clienteId = document.getElementById("clienteId").value = dados.clienteId

            } else {
                var divPerfil = document.getElementById("divPerfil")
                divPerfil.parentNode.removeChild(divPerfil);

                document.getElementById("reglog").innerHTML = ['<ul class="me-auto mb-2 mb-lg-0 text-white position-relative"><a href="/login" class="btn btn-success">Registra-se</a><a href="/login" class="btn btn-outline-success">Login</a></ul>'].join('');
            }
        })
        axios.get('https://ecomerce-front.herokuapp.com/empresa').then(empresa => {
            if (empresa.data != undefined) {
                empresa.data.forEach(empresa => {
                    var logo = document.getElementById("logo")
                    logo.src = empresa.logo
                    var span = document.getElementById("empreza")
                    span.innerHTML = empresa.nome
                })
            }
        })
        function busca() {
            var buscar = document.getElementById("pesquisa")
            if (buscar.value == '' || buscar.value == undefined) {
                alert("Digite o que deseja pesquisar!")
            } else {
                axios.post("http://localhost:8080/find", { busca: buscar.value }).then(busca => {
                    window.location.href = "/admin/produto/busca/" + busca.data;
                }).catch(err => {
                    console.log(err)
                })
            }
        }

    </script>