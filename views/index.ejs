<%- include("./partials/head.ejs")%>

    <%- include("./partials/nav.ejs")%>
    
        <!-- banners -->
        <div class="container">
            <div id="carouselExampleSlidesOnly" class="carousel slide d-block" data-bs-ride="carousel">
                <div class="carousel-inner mt-3">
                    <%banners.forEach((banner,index)=>{%>
                        <%if(index == 0){%>
                            <div class="carousel-item active">
                                <img src="<%=banner.img%>" class="d-block w-100" data-bs-interval="2000">
                                <!-- width="1340" height="400" -->
                            </div>
                        <%}else{%>
                            <div class="carousel-item">
                                <img src="<%=banner.img%>" class="d-block w-100" data-bs-interval="2000">
                            </div>
                        <%}%>
                   <%})%>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4 text-center text-md-start efeito" style="
                box-shadow: -7px 0px 1em 1px #72757773;
                /* margin-block: 10px; */
                padding: 10px;">
                    <figure class="itemside">
                        <div class="aside text-center">
                            <span class="icon-sm">
                                <img src="/img/melhoresPrecos.svg">
                            </span>
                        </div>
                        <figcaption class="info text-center">
                            <h5 class="title text-uppercase" style="border-bottom: 7px double #a0e5a5;padding-bottom: 10px;">Melhores Preços</h5>
                            <p class="text-muted text-white">Encontre aqui o melhor preço do mercado! Preços que
                                cabem no seu bolso e com descontos imprerdíveis</p>
                        </figcaption>
                    </figure>
                    <!-- iconbox // -->
                </div>
                <!-- col // -->
                <div class="col-md-4 text-center text-md-start efeito" style="
                box-shadow: 0 0 1em 1px #72757773;
                /* margin-block: 10px; */
                padding: 10px; ">
                    <figure class="itemside" style="
                    margin: 5px; ">
                        <div class="aside text-center">
                            <span class="icon-sm">
                                <img src="/img/canaisAtendimento.svg">
                            </span>
                        </div>
                        <figcaption class="info text-center">
                            <h5 class="title text-uppercase" style="
                            border-bottom: 7px double #a0e5a5;
                            padding-bottom: 10px;
                        ">Canais de Atendimento</h5>
                            <p class="text-muted">Caso desejar pode entrar em contato em nossa central de
                                atendimento ao cliente. No canto inferior do site você vai ver um caixa de texto
                                onde pode ser atendido</p>
                        </figcaption>
                    </figure>
                    <!-- iconbox // -->
                </div>
                <!-- col // -->
                <div class="col-md-4 text-center text-md-start efeito" style="
                box-shadow: 0 0 1em 1px #72757773;
                /* margin-block: 10px; */
                padding: 10px;
            ">
                    <figure class="itemside" style="
                    margin: 5px; ">
                        <div class="aside text-center">
                            <span class="icon-sm rounded-circle bg-success">
                                <img src="/img/rapidaEntrega.svg">
                            </span>
                        </div>
                        <figcaption class="info text-center">
                            <h5 class="title text-uppercase" style="
                            border-bottom: 7px double #a0e5a5;
                            padding-bottom: 10px;">Rápida Entrega</h5>
                            <p class="text-muted">Nossa equipe trabalha de maneira eficaz para que a entrega seja
                                feita o mais rápido possível. Nosso foco é a satisfação do cliente em obter o
                                produto em mãos.</p>
                        </figcaption>
                    </figure>
                    <!-- iconbox // -->
                </div>
                <!-- col // -->
            </div>
            <!-- FIM BOX PARA INFORMAR OS ATRIBUTOS DA EMPRESA -->
            <br>

            <!-- LISTAGEM DOS PRODUTOS -->
            <div id="produtos">
                <h2 class="title text-center" style="
                background: #061d3014;
            ">Nossos produtos</h2>
                <h4 class="subtitle text-center mb-4" style="
                background: #dee1e333;">Veja abaixo nossos principais produtos!</h4>
                <div class="row">
                    <%produtos.forEach((produto,index)=>{%>
                        <%if(index < 12){%>
                            <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                                <a href="/produto/<%=produto.id%>" class="destaque">
                                    <div class="img-container mb-3">
                                        <!-- Demonstra a imagem do produto -->
                                        <%var imagem=imagens.find(imagem=> imagem.produtoId == produto.id)%>
                                            <%if(imagem !=undefined){%>
                                                <img src="<%=imagem.imagem%>" class="img-fluid">
                                                <%}else{%>
                                                    <img class="rounded mx-auto d-block" src="/img/null.png" width="220"
                                                        height="220">
                                                    <%}%>

                                    </div>
                                        <!-- Demonstra o nome do produto -->
                                    <h5 class="text-uppercase">
                                        <%=produto.nome%>
                                    </h5>
                                    <%precos.forEach(preco=> {%>
                                        <%if(preco.produtoId==produto.id){%>
                                        <!-- Demonstra o preço do produto e se tem desconto -->
                                            <span class="form-control text-white fw-bold bg-primary bg-gradient">
                                                <%if(preco.desconto> 0){%>
                                                    <s id="s" class="fs-6 text-danger">
                                                        <%=preco.venda.toLocaleString('pt-br',{style: 'currency' ,
                                                            currency: 'BRL' })%>
                                                    </s>
                                                    <strong id="strong" class="fs-4">
                                                        <%=preco.desconto.toLocaleString('pt-br',{style: 'currency' ,
                                                            currency: 'BRL' })%>
                                                    </strong>
                                                    <%}else{%>
                                                        <strong id="strong" class="fs-4">
                                                            <%=preco.venda.toLocaleString('pt-br',{style: 'currency' ,
                                                                currency: 'BRL' })%>
                                                        </strong>
                                                        <%}%>

                                            </span>
                                            <%}%>
                                                <%})%>
                                </a>
                            </div>
                            <%}%>
                                <%})%>
                </div>
            <!-- Fim da  LISTAGEM DOS PRODUTOS -->

            </div>
            <div class="row justify-content-center mt-5">
                <div class="col-10"><a href="/produtos/todos" class="btn btn-primary form-control">Vizualizar todos</a></div>
            </div>

        </div>


        <%- include("./partials/footer.ejs")%>

        </html>
