<%- include("../partials/head.ejs")%>
    <%- include("../partials/nav.ejs")%>

        <div class="container">
            <div class="card mt-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Demonstrativo de compra</h3>
                    <p>Verifique abaixo o comprovante e o status de sua compra</p>

                    <div class="personal-image">
                        <label class="label">
                            <figure class="personal-figure">
                                <%if(empresa.logo==undefined){%>
                                    <img src="/img/avatar.jpg" class="personal-avatar" id="imagem" alt="avatar">
                                    <%}else{%>
                                        <img src="<%=empresa.logo%>" class="personal-avatar" id="imagem" alt="avatar">
                                        <%}%>
                            </figure>
                        </label>
                    </div>
                </div>

                <div class="card-body">
                    <table class="table table">
                        <h5>Resumo:</h5>
                        <hr>
                        <thead class="text-muted">
                            <tr class="small text-uppercase">
                                <th scope="col" width="100">Ordem</th>
                                <th scope="col" width="160">Descrição</th>
                                <th scope="col" width="120">Valor</th>
                                <th scope="col" width="120">Data</th>
                                <th scope="col" width="120">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">
                                    <%=dadosTransicao.orderId%>
                                </th>
                                <td scope="row">
                                    <%=dadosVenda.descricao%>
                                </td>
                                <td scope="row">
                                    <%=dadosVenda.unit_price.toLocaleString('pt-br',{style: 'currency' , currency: 'BRL'
                                        })%>
                                </td>
                                <td scope="row">
                                    <%=data%>
                                </td>
                                <td scope="row">
                                    <span class="bg-warning text-white px-3 btn">
                                        <%=dadosTransicao.status%>
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br>
                    <div class="row">
                        <%if(dadosTransicao.status=='pending' ){%>
                            <%if(dadosPagamento.codigoDeBarras !=0){%>
                                <div class="col-md-5">
                                    <label for="codbar">Codigo de Barras</label>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control bg-white"
                                            placeholder="Recipient's username" aria-label="Recipient's username"
                                            aria-describedby="button-addon2" id="codbar" disabled
                                            value="<%=dadosPagamento.codigoDeBarras%>">
                                        <button class="btn btn-outline-secondary" type="button" id="btnCopiar"
                                            onclick="copiar()">copiar</button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <label for="">Data de vencimento</label>
                                    <input type="text" class="form-control bg-white text-center" disabled
                                        value="<%=dataExpiracao%>">
                                </div>
                                <div class="col-md-2">
                                    <label for="">Valor do documento</label>
                                    <input type="text" class="form-control bg-white text-center" disabled value="<%=dadosVenda.unit_price.toLocaleString('pt-br',{style: 'currency' , currency: 'BRL'
                                })%>">
                                </div>
                                <div class="col-md-3">
                                    <a href="<%=dadosPagamento.boletoUrl%>" class="btn btn-success text-white mt-4 ms-5"
                                        target="_blank">Reiprimir Boleto</a>
                                </div>
                                <%}else{%>
                                    <div class="col-md-7 text-center">
                                        <img src="/img/triste.png" class="mx-auto d-block" width="60px" height="60px">
                                        <h4 class="mt-2">Pagamento não identificado ou validade do boleto vencida</h4>
                                        <p>Para mais duvidas acesse nossos canais de atendimento ao Cliente</p>
                                    </div>
                                    <div class="col-md-5 text-center mt-3">
                                        <a href="/" class="btn btn-success text-white mx-auto d-block">Realizar novo
                                            pagamento</a>
                                        <h4 class="mt-3">Clique no botão acima para gerar um novo pagamento</h4>
                                    </div>
                                    <%}%>
                                        <%}else if(dadosTransicao.status=='approved' ){%>
                                            <div class="col-md-12 text-center">
                                                <img src="/img/aprovado.png" class="mx-auto d-block" width="60px"
                                                    height="60px">
                                                <button class="btn btn-success text-white fs-4 mt-2"> Pagamento
                                                    Aprovado!!</button>
                                                <p>Veja abaixo como esta o andamento da entrega do seu pedido</p>
                                            </div>
                                            <%}%>
                    </div>
                    <%if((dadosTransicao.status=='pending' && dadosPagamento.codigoDeBarras !=0 ) ||
                        dadosTransicao.status=='approved' ){%>
                        <hr>
                        <div class="mt-3">
                            <div class="row">
                                <div class="col-md-5 ms-3 text-end">
                                    <img src="/img/mapas.png" height="30px" width="30px">
                                </div>
                                <div class="col-md-4 text-start">
                                    <h4>Dados da Entrega</h4>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-md-12 text-center">
                                    <dt class="btn btn-primary text-white fs-bold" >CEP: <%=dadosEntrega.cep%> -
                                            <%=dadosEntrega.rua%>, Nº
                                                <%=dadosEntrega.numero%>, Bairro <%=dadosEntrega.bairro%>.
                                                        <%=dadosEntrega.cidade%> - <%=dadosEntrega.uf%>
                                    </dt>
                                    <div class="row mt-3">
                                        <div class="col-md-6 text-end">
                                            <dt>Status da entrega: <a class="btn btn-primary text-white"><%=dadosEntrega.status%></a></dt> 
                                        </div>
                                        <div class="col-md-6 text-start"><dt>Data prevista: <a class="btn btn-outline-secondary"><%=dadosEntrega.dataPrevista%></a> </dt></div>
                                    </div>
                                    <h4 class="mt-4">Encontrou alguma divergencia?</h4>
                                    <p>Fale ja com nossa equipe em nossos canais de atendimento ao cliente</p>
                                </div>

                            </div>
                        </div>
                        <%}%>
                </div>
            </div>
        </div>

        <%- include("../partials/footer.ejs")%>
            <script>
                function copiar() {
                    var codbar = document.getElementById('codbar').disabled = false
                    var codbar = document.getElementById('codbar').select()
                    document.execCommand('copy')
                    alert("Codigo de barras copiado")
                    var codbar = document.getElementById('codbar').disabled = true
                }
            </script>