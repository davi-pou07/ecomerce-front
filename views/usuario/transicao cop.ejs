<%- include("../partials/head.ejs")%>
    <%- include("../partials/nav.ejs")%>

        <div class="container">
            <div class="card mt-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Demonstrativo de compra</h3>
                    <p>Verifique abaixo o comprovante e o status de sua compra</p>

                    <div class="personal-image">
                        <label class="label">
                            <figure class="personal-figure">
                                <%if(empresa.logo==undefined){%>
                                    <img src="/img/avatar.jpg" class="personal-avatar" id="imagem" alt="avatar">
                                    <%}else{%>
                                        <img src="<%=empresa.logo%>" class="personal-avatar" id="imagem" alt="avatar">
                                        <%}%>
                            </figure>
                        </label>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table">
                            <h5>Resumo:</h5>
                            <hr>
                            <thead class="text-muted">
                                <tr class="small text-uppercase">
                                    <th scope="col" width="100">Ordem</th>
                                    <th scope="col" width="160">Descrição</th>
                                    <th scope="col" width="120">Valor</th>
                                    <th scope="col" width="120">Data</th>
                                    <th scope="col" width="120">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">
                                        <%=dadosTransicao.orderId%>
                                    </th>
                                    <td scope="row">
                                        <%=dadosVenda.descricao%>
                                    </td>
                                    <td scope="row">
                                        <%=dadosVenda.unit_price.toLocaleString('pt-br',{style: 'currency' ,
                                            currency: 'BRL' })%>
                                    </td>
                                    <td scope="row">
                                        <%=data%>
                                    </td>
                                    <td scope="row">
                                        <%if(dadosTransicao.status=='approved' ) {%>
                                            <span class="bg-success text-white px-3 btn">
                                                Aprovado
                                            </span>
                                            <%}else if(dadosTransicao.status=='pending' ){%>
                                                <span class="bg-warning text-white px-3 btn">
                                                    Pendente
                                                </span>
                                                <%}else{%>
                                                    <span class="bg-secundary text-white px-3 btn">
                                                        <%=dadosTransicao.status%>
                                                    </span>
                                                    <%}%>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <br>
                    <div class="row">
                        <%if(dadosVenda.opcaoDePagamento==1){%>
                            <% if(){ %>
                                
                                <% } %>  
                            <%}else if(dadosPagamento.opcaoDePagamento==2){%>
                                <%if(dadosTransicao.status=='pending' ){%>
